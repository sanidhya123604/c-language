//   Write a C program to count number of digits in a number.


#include <stdio.h>

int main()
{
    int num,i,count=0,r;
    printf("enter the number:");
    scanf("%d",&num);
    while(num!=0)
    {
        
        num=num/10;
        count=count+1;
        
    }
    printf("%d",count);

    return 0;
}
